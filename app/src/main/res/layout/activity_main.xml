<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codemitry.birdie.MainActivity">

    <com.codemitry.birdie.BackgroundSurface
        android:id="@+id/menu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/leaderBoard_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/leaderboard_background"
        android:onClick="onLeaderBoardClick"
        android:scaleType="center"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/achievements_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/achiements_background"
        android:onClick="onAchievementsClick"
        android:scaleType="center"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaderBoard_button" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@null"
        android:transitionName="settings_trans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings" />

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:fontFamily="@font/coaster_black"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="4"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/orange"
        android:textSize="56sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/menuButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/menuPicture"
        app:layout_constraintVertical_bias="0.85">

        <Button
            android:id="@+id/start"
            style="@style/ButtonStyle"
            android:onClick="onStartClick"
            android:text="@string/menu_start" />

        <Button
            android:id="@+id/shop"
            style="@style/ButtonStyle"
            android:onClick="onShopClick"
            android:text="@string/shop" />

        <Button
            android:id="@+id/statistics"
            style="@style/ButtonStyle"
            android:onClick="onStatisticsClick"
            android:text="@string/statistics" />

        <!--        <Button-->
        <!--            android:id="@+id/exit"-->
        <!--            style="@style/ButtonStyle"-->
        <!--            android:onClick="onExitClick"-->
        <!--            android:text="@string/menu_exit" />-->

    </LinearLayout>


    <ImageView
        android:id="@+id/menuPicture"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/app_img"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/menuButtonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="177dp"
        android:layout_height="52dp"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="15dp"
        android:alpha="100"
        android:gravity="center_horizontal"
        android:text="@string/company"
        android:textColor="@color/red_dark"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:onClick="onLogoClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/exit"
        android:onClick="onExitClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/exit" />


</androidx.constraintlayout.widget.ConstraintLayout>