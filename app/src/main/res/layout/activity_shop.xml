<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        app:srcCompat="@drawable/app_background" />

    <TextView
        android:id="@+id/shopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/typography"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="4"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="@string/shop"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/orange"
        android:textSize="56sp"

        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:drawableStart="@drawable/shop_coin"
        android:drawablePadding="15dp"

        android:fontFamily="@font/coaster_black"
        tools:text="13"
        android:textColor="@color/orange"
        android:textSize="36sp"
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowColor="@android:color/black"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopText" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shopText"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                android:id="@+id/first_texture"
                layout="@layout/shop_item_layout"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/second_texture"
                layout="@layout/shop_item_layout"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </HorizontalScrollView>

    <Button
        android:id="@+id/back"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="40dp"
        android:onClick="onBackClick"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buy_dialog"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone"
        android:background="#E8000000"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/texture_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"

            android:fontFamily="@font/typography"
            android:letterSpacing="0.1"

            tools:text="Field"
            android:textColor="@color/orange"
            android:textSize="36sp"


            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/sure_to_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"

            android:fontFamily="@font/typography"
            android:letterSpacing="0.1"

            android:text="@string/sure_to_buy"
            android:textColor="@color/text_color"
            android:textSize="32sp"

            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="@id/texture_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider_shop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/red_dark"

            app:layout_constraintTop_toBottomOf="@id/sure_to_buy"
            app:layout_constraintBottom_toTopOf="@id/cost_text" />

        <TextView
            android:id="@+id/cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"

            android:fontFamily="@font/typography"
            android:letterSpacing="0.1"

            android:text="@string/will_cost"
            android:textColor="@color/text_color"
            android:textSize="32sp"

            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/sure_to_buy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/yes"
            style="@style/ButtonStyle"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="@string/yes"
            android:textAlignment="center"
            android:textSize="34sp"

            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cost_text" />

        <Button
            android:id="@+id/no"
            style="@style/ButtonStyle"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:onClick="onNoClick"
            android:text="@string/no"
            android:textSize="34sp"
            android:textAlignment="center"

            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/yes"
            app:layout_constraintTop_toBottomOf="@id/cost_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>