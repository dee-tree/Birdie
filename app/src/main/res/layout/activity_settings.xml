<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codemitry.birdie.SettingsActivity">


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        app:srcCompat="@drawable/app_background" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/settingsLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/settingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typography"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="@string/settings"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:textSize="56sp"

            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollViewSettings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="200dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/back"
            app:layout_constraintTop_toBottomOf="@id/settingsText"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:id="@+id/settingsButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/language_button"
                    style="@style/ButtonStyle"
                    android:onClick="onChangeLanguageClick"
                    android:text="@string/menu_language"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/settingsText" />

                <Button
                    android:id="@+id/vibration_switch_button"
                    style="@style/ButtonStyle"
                    android:onClick="onChangeVibrationClick"
                    android:text="@string/enable_vibration"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/language_button" />

                <Button
                    android:id="@+id/reset_stat_button"
                    style="@style/ButtonStyle"
                    android:onClick="onResetScoreClick"
                    android:text="@string/reset"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/language_button" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/back"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="40dp"
            android:onClick="onBackClick"
            android:text="@string/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/sign_in"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/google_play_sign"
            android:drawableStart="@drawable/ic_play_games_badge_gray"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:onClick="onSignInClick"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scrollHorizontally="false"
            android:text="@string/connect"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollViewSettings"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resetStatLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/bestScoreReset_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="@style/TextStyle"

            android:text="@string/best_score"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/sureToReset_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="@style/TextStyle"

            android:text="@string/sure_to_reset"
            android:textSize="32sp"

            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bestScoreReset_text" />

        <View
            android:id="@+id/reset_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red_dark"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toTopOf="@+id/sureToReset_text"
            app:layout_constraintTop_toBottomOf="@+id/bestScoreReset_text"
            tools:layout_editor_absoluteX="1dp" />

        <Button
            android:id="@+id/yesReset_button"
            style="@style/ButtonStyle"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:onClick="onYesClick"
            android:text="@string/yes"
            android:textSize="34sp"



            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/noReset_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sureToReset_text"
            app:layout_constraintVertical_bias="0.25" />

        <Button
            android:id="@+id/noReset_button"
            style="@style/ButtonStyle"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:onClick="onNoClick"
            android:text="@string/no"
            android:textSize="34sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/yesReset_button"
            app:layout_constraintTop_toBottomOf="@+id/sureToReset_text"
            app:layout_constraintVertical_bias="0.25" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>