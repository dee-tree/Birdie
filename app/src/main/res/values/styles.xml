<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="toolbarNavigationButtonStyle">@null</item>
        <item name="android:immersive">true</item>
        <item name="android:isSticky">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/menu_buttons_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/coaster_black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <!--        <item name="android:shadowDx">2</item>-->
        <!--        <item name="android:shadowDy">2</item>-->
        <!--        <item name="android:shadowRadius">3</item>-->
        <!--        <item name="android:shadowColor">@android:color/holo_orange_dark</item>-->

    </style>

</resources>
