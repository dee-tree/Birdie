<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codemitry.birdie">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:isGame="true"
        android:hardwareAccelerated="true"
        android:screenOrientation="portrait"
        android:icon="@drawable/icon_rect"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_round"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity
            android:name="com.codemitry.birdie.LoseActivity"
            android:theme="@style/Translucent"></activity>
        <activity
            android:name="com.codemitry.birdie.Pause"
            android:theme="@style/Translucent"></activity>
        <activity
            android:name="com.codemitry.birdie.Game"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="com.codemitry.birdie.ResetScoreActivity"
            android:theme="@style/Translucent"></activity>
        <activity
            android:name="com.codemitry.birdie.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="com.codemitry.birdie.MainActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

